---
import Footer from '@/modules/common/footer.astro';
import Navbar from '@/modules/common/navbar.astro';
import '@/styles/global.css';
import { AstroFont } from 'astro-font';
import { SEO } from 'astro-seo';
import type { SEOProps } from 'astro-seo';
import { buildImageUrl } from 'cloudinary-build-url';

type Props = {
  title?: string;
  description?: string;
  openGraph?: SEOProps['openGraph'];
  keywords?: Array<string>;
  robots?: string;
  hideFooter?: boolean;
  hideNavbar?: boolean;
};

let defaultTitle = 'SOTC PU';
let defaultDescription =
  'Social and Open Technology Community in the Pondicherry University is one of the GLUG under FSHM';
let defaultOpenGraphBasic = {
  image: buildImageUrl('rimzzlabs/og', {
    cloud: { cloudName: 'rizkicitra' },
    transformations: { quality: 100, format: 'webp' },
  }),
  title: 'sotcpu.me',
  type: 'website',
};

let defaultOpenGraph: SEOProps['openGraph'] = { basic: defaultOpenGraphBasic };
let defaultKeywords = [
  'sotc',
  'sotcpu',
  'social and open technology community',
  'fshm',
  'glug',
  'foss club in pondicherry',
  'glug in pondicherry university',
  'foss club',
  'university club',
  'free software community',
  'fshm glug',
  'foss',
];
let defaultRobots = 'index, follow';

let {
  hideNavbar,
  hideFooter,
  robots = defaultRobots,
  openGraph = defaultOpenGraph,
  title = defaultTitle,
  description = defaultDescription,
  keywords = defaultKeywords,
} = Astro.props;

let keywordsContent = keywords.join(',');
let pathname = Astro.url.pathname;
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <AstroFont
      config={[
        {
          name: 'Manrope',
          src: [],
          googleFontsURL:
            'https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap',
          preload: true,
          display: 'swap',
          selector: 'body',
          fallback: 'sans-serif',
        },
      ]}
    />
    <SEO
      title={title}
      description={description}
      openGraph={openGraph}
      twitter={{
        creator: '@sotc',
        site: 'sotcpu.me',
        description: description,
        image: openGraph.basic.image,
        imageAlt: openGraph.basic.title,
        title: openGraph.basic.title,
      }}
      extend={{
        link: [
          { rel: 'icon', href: '/favicon.svg' },
          { rel: 'sitemap', href: '/sitemap-index.xml' },
        ],
        meta: [
          { name: 'author', content: 'sotcpu.me' },
          { name: 'publisher', content: 'sotcpu.me' },
          {
            name: 'twitter:image',
            content: openGraph.basic.image,
          },
          { name: 'twitter:title', content: title },
          { name: 'twitter:description', content: description },
          { name: 'generator', content: Astro.generator },
          { name: 'keywords', content: keywordsContent },
          { name: 'robots', content: robots },
          {
            name: 'viewport',
            content: 'width=device-width, initial-scale=1, minimum-scale=1, viewport-fit=cover',
          },
          {
            name: 'googlebot',
            content: 'index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1',
          },
        ],
      }}
    />
  </head>

  <body>
    {!hideNavbar && (pathname !== '/' ? <Navbar /> : null)}
    <slot />
    {!hideFooter && <Footer />}
  </body>
</html>
